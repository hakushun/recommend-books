rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /books/{bookId} {
      allow read : if request.auth != null;
      allow create: if request.auth != null && request.resource.data.registeredBy.id == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.registeredBy.id == request.auth.uid;
    }
  }
}
